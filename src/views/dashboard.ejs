<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>HR Dashboard</title>
  <style>
    body {
      font-family: sans-serif;
      background: #f4f6f9;
      padding: 40px;
    }
    h1 {
      text-align: center;
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      margin-top: 30px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: left;
    }
    th {
      background: #007bff;
      color: white;
    }
    tr:hover {
      background-color: #f1f1f1;
    }
  </style>
</head>
<body>
  <h1>HR Dashboard</h1>

  <% if (!users || users.length === 0) { %>
    <p>No user applications to display.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th>Graduation</th>
          <th>Domain</th>
          <th>Skills</th>
          <th>Experience</th>
          <th>Expected Package</th>
          <th>Resume</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.graduation || '-' %></td>
            <td><%= user.domain || '-' %></td>
            <td><%= (user.skills || []).join(', ') %></td>
            <td><%= user.experience || '-' %></td>
            <td><%= user.expectedPackage || '-' %></td>
            <td>
              <% if (user.resumeURL) { %>
                <a href="<%= user.resumeURL %>" target="_blank">View</a>
              <% } else { %>
                Not uploaded
              <% } %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
